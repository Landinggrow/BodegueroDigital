---
import Container from '../shared/Container.astro';
import siteData from '../../site.json';

const { topinfo, topdescripcion } = siteData.functionalities;
---
<Container>
  <div class="text-center py-8 mt-20 px-4 md:px-8">
    <h1 class="text-3xl md:text-5xl font-bold text-[#FFFFFF] mb-4 leading-tight">{topinfo}</h1>
    <p class="text-lg md:text-xl text-[#F5F7FA] leading-relaxed">{topdescripcion}</p>
  </div>
</Container>