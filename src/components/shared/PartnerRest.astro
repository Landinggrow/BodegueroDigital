---
import Container from "./Container.astro"
import Button from "./Button.astro"
import IconStar from "../icons/IconStar.astro"
import siteData from "../../site.json"
import ButtonContact from "./ButtonContact.astro"
---

<Container>
  <section class="flex justify-center items-center md:py-6 px-4 mt-20">
  <div >
    <h2 class="text-2xl md:text-[40px] font-black text-[#FFFFFF] mb-4 ">
      { siteData.partner.title }
    </h2>
    <p class="text-[#F5F7FA] mb-8  md:text-[24px]">
      { siteData.partner.description }
    </p>
    <div class="bg-[#F4EFEC] rounded-xl p-6 text-left shadow-sm mb-8 max-w-xl mx-auto">
      <h3 class="md:text-4xl font-bold text-[#FFC100] mb-4">Beneficios Exclusivos:</h3>
      <ul class="space-y-2 md:text-2xl font-medium text-gray-800">
        {siteData.partner.benefits.map((item) => (
          <li class="flex items-center">
            <span class="text-orange-500 mr-2"><IconStar /></span>
            {item}
          </li>
        ))}
      </ul>
    </div>
    <!-- <div class="flex justify-center items-center max-w-xl mx-auto mb-5">
      <Button />
    </div> -->
    <div class="mt-10 flex flex-col justify-center md:flex-row gap-2">
      <Button  aria-label="Descubre más sobre la gestión gastronómica" />
      <ButtonContact >
    </div>
  </div>
</section>
</Container>
