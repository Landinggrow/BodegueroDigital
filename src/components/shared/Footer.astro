---
import siteData from '../../site.json';
import IconFacebook from "../icons/IconFacebook.astro"
import IconYouTube from  "../icons/IconYouTube.astro"
import IconLinkedin from  "../icons/IconLinkedin.astro"
import IconInstagram from  "../icons/IconInstagram.astro"
import Container from './Container.astro';
import ButtonFoot from './ButtonFoot.astro';
---


<footer class="bg-[#FFFFFF] text-gray-800 py-8">
    <Container >
        <div class="flex justify-between items-center">
            <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
                <img src="/images/LogoBodegueroDigital.png" class="md:h-6 h-5" alt="Logo de BodegueroDigital">
            </a>
            <div>
                <ButtonFoot />
            </div>
        </div>

        <div class="mt-8 grid sm:grid-cols-4 gap-4">
            <!-- Sección de Nosotros -->
            <div>
                <h3 class="text-[24px] font-bold text-[#267ad2]">Sobre NubeRest:</h3>
                <p class="mt-2 text-sm text-[#545454]">{siteData.footer.content.description}</p>
                <div class="flex flex-col mt-2">
                <a href="/politica-de-privacidad" class="underline text-[#267ad2] hover:text-blue-700">Política de privacidad</a>
                <a href="/terminos-y-condiciones" class="underline text-[#267ad2] hover:text-blue-700">Términos y condiciones</a>
                </div>
            </div>

            <!-- Sección de Menú -->
            <div>
                <h3 class="text-[24px] font-bold text-[#267ad2]">Menú:</h3>
                <ul class="mt-2 space-y-2">
                    {siteData.nav.menu.map((item) => (
                        <li>
                            <a href={item.link} 
                               class="py-2 px-3 text-[#545454] text-[17px] font-normal rounded-sm 
                                      hover:bg-[#E49542] lg:hover:bg-transparent lg:hover:text-[#E49542] 
                                      lg:p-0 transition-all">
                                {item.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Sección de Soporte -->
            <div>
                <h3 class="text-[24px] font-bold text-[#267ad2]">Soporte:</h3>
                <div class="mt-2 flex space-x-3">
                    <div class="w-40 h-20 flex justify-center items-center bg-white rounded-md shadow"><img src="/images/incuval.png" alt="Logo de incuval"></div>
                    <div class="w-25 h-20 flex justify-center items-center bg-white rounded-md shadow"><img src="/images/scale.jpg" class="w-15" alt="Logo de Scale"></div>
                </div>
                <a target="_blank" href="https://docs.google.com/forms/d/e/1FAIpQLSeW87u_SXyfF1MhNfHlC-H7bGuuX6xULgBkCCaB14B4Zz6U5g/viewform">
                <div class="w-25 h-20 flex justify-center items-center bg-white rounded-md shadow mt-2"><img src="/images/icon-book-claims.webp" class="w-23" alt="Libro de reclamaciones"></div>
                </a>
            </div>

            <div>
                <h3 class="text-[24px] font-bold text-[#267ad2]">Contacto:</h3>
                <p class="mt-4 text-sm text-[#545454]">{siteData.footer.content.email}</p>
                <p class="mt-4 text-sm text-[#545454]">{siteData.footer.content.phone}</p>
                <div class="mt-4 flex space-x-3">
                    <IconFacebook /> 
                    <IconYouTube />
                    <IconLinkedin />
                    <IconInstagram />
                </div>
            </div>
        </div>

        <div class="text-center text-sm text-gray-500 mt-8">
            Copyright © 2025. BodegueroDigital
        </div>
    </Container>
</footer>

