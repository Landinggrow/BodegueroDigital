---
import Nav from "../components/shared/Nav.astro";
import Footer from "../components/shared/Footer.astro"
---

<!doctype html>
<html lang="en">
<head>
    <!-- SEO Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- SEO Metadata -->
    <title>NubeRest - Sistema de Gestión para Restaurantes | POS Cloud</title>
    <meta name="description" content="Potencia tu restaurante con nuestro sistema integral: control de inventario, pedidos, reportes y más. Solución todo-en-uno para gestión gastronómica." />
    
    <!-- Open Graph -->
    <meta property="og:title" content="NubeRest - Sistema de Gestión para Restaurantes | POS Cloud" />
    <meta property="og:description" content="Potencia tu restaurante con nuestro sistema integral: control de inventario, pedidos, reportes y más. Solución todo-en-uno para gestión gastronómica." />
    <meta property="og:image" content="/images/LogoNubeRest.png" />
    <meta property="og:url" content="https://nuberest.com/" />
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="NubeRest - Sistema de Gestión para Restaurantes | POS Cloud" />
    <meta name="twitter:description" content="Potencia tu restaurante con nuestro sistema integral: control de inventario, pedidos, reportes y más. Solución todo-en-uno para gestión gastronómica." />
    <meta name="twitter:image" content="/images/LogoNubeRest.png" />
    
    <!-- Canonical -->
    <link rel="canonical" href="https://nuberest.com/" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "NubeRest",
      "url": "https://nuberest.com/",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{search_url}?q={search_term}",
        "query-input": "required name=search_term"
      }
    }
    </script>
    
    <!-- Favicon para modo claro -->
        <link rel="icon" media="(prefers-color-scheme: light)" type="image/svg+xml" href="/favicon1.svg" />
        <!-- Favicon para modo oscuro -->
        <link rel="icon" media="(prefers-color-scheme: dark)" type="image/svg+xml" href="/favicon2.svg" />
        <meta name="generator" content={Astro.generator} />
    </head>
    <body class="bg-[#FDFCF7]">
        <Nav />
        <slot />
        <Footer />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
